<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="ANALYZER WEB SERVICE" >

        <EditTextPreference
            android:key="web_service_URL"
            android:title="@string/web_service_URL_preference_title"
            android:summary="@string/web_service_URL_preference_summary"
            android:dialogTitle="@string/web_service_URL_dialog_title"
            android:dialogMessage="@string/web_service_URL_dialog_message"
            android:inputType="textUri"
            android:defaultValue="@string/default_web_service_URL"
            android:capitalize="none"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

    </PreferenceCategory>

</PreferenceScreen>
